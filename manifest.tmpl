image: rancher/calico-cni:{{build.tag}}
manifests:
  -
    image: rancher/calico-cni:{{build.tag}}-linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: rancher/calico-cni:{{build.tag}}-linux-arm64
    platform:
      architecture: arm64
      os: linux
  -
    image: rancher/calico-cni:{{build.tag}}-linux-arm
    platform:
      architecture: arm
      os: linux
